@model EcommerceChitarre.Models.Articoli

@{
    ViewBag.Title = "Delete";
}



<div class="text-center" style=" font-family:Comfortaa, sans-serif;">
    <h2>
        Elimina articolo
    </h2>

</div>
<div>

    <hr />
    <div class="card">
        <div class="card-body mb-2">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Articolo_ID)

            <div class="form-group row mb-2">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </div>
            </div>

            <div class="form-group row mb-2">
                @Html.LabelFor(model => model.Img, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Img)
                </div>
            </div>

            <div class="form-group row mb-2">
                @Html.LabelFor(model => model.Prezzo, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Prezzo)
                </div>
            </div>

            <div class="form-group row mb-2">
                @Html.LabelFor(model => model.Tempo_Cons, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Tempo_Cons)
                </div>
            </div>

            <div class="form-group row mb-2">
                @Html.LabelFor(model => model.Dettagli, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Dettagli)
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger mt-3" />
            @Html.ActionLink("Torna alla lista", "Index", null, new { @class = "btn btn-primary mt-3" })
        </div>
    }
</div>
